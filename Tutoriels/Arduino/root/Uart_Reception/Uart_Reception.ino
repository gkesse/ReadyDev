boolean gReceive = false;
//===============================================
void setup() {
  Serial.begin(9600);
}
//===============================================
void loop() {
  if (gReceive) {
    gReceive = false;
    Serial.println("A");
  }
}
//===============================================
void serialEvent() {
  Serial.read();
  gReceive = true;
}
