<?xml version="1.0" encoding="UTF-8"?>
<rdv>
    <datas>
        <!-- ============================================ -->
        <!-- editor -->
        <!-- ============================================ -->
        <data>
            <code>editor</code>
            <title>Éditeur de pages HTML</title>
            <id>editeur_pages_html</id>
        </data>
        <!-- ============================================ -->
        <!-- env -->
        <!-- ============================================ -->
        <data>
            <code>env</code>
            <map>
                <data>
                    <category>normal</category>
                    <id>EditorPageAddressParent</id>
                </data>            
                <data>
                    <category>normal</category>
                    <id>EditorTabDefault</id>
                    <value>1</value>
                </data>            
            </map>
        </data>
        <!-- ============================================ -->
        <!-- header -->
        <!-- ============================================ -->
        <data>
            <code>header</code>
            <module>editor</module>
            <method>open_header</method>
            <map>
                <data>
                    <category>icon</category>
                    <tooltip>Accueil</tooltip>
                    <id>EditorTab0</id>
                    <name>home</name>
                </data>
                <data>
                    <category>text</category>
                    <tooltip>Gestion d'une page</tooltip>
                    <id>EditorTab1</id>
                    <name>Page</name>
                </data>
                <data>
                    <category>text</category>
                    <tooltip>Edition d'une page</tooltip>
                    <id>EditorTab2</id>
                    <name>Edition</name>
                </data>
            </map>
        </data>
        <!-- ============================================ -->
        <!-- home -->
        <!-- ============================================ -->
        <data>
            <code>home</code>
            <title>ReadyEditor</title>
            <id>EditorTab0</id>
            <intro><![CDATA[
                <b>ReadyEditor</b> est un éditeur de pages HTML.<br>
                Il permet d'éditer les pages HTML du siteweb.
                Cela accélère l'ajout de nouveaux contenus
                et évite de passer du temps inutilement à écrire du code
                dans le but d'ajouter de nouveaux contenus.
                <br>Produit par <b>Gérard KESSE</b>.
               ]]></intro>
        </data>
        <!-- ============================================ -->
        <!-- page -->
        <!-- ============================================ -->
        <data>
            <code>page</code>
            <title>Page</title>
            <id>EditorTab1</id>                
            <map>
                <!-- body -->
                <data>
                    <category>body</category>
                    <model>hidden</model>
                    <label>Id :</label>
                    <id>EditorPageId</id>
                    <type>number</type>
                </data>
                <data>
                    <category>body</category>
                    <model>hidden</model>
                    <label>Id parent :</label>
                    <id>EditorPageParentId</id>
                    <type>number</type>
                </data>
                <data>
                    <category>body</category>
                    <model>addressbar</model>
                    <id>EditorPageAddress</id>
                    <module>page</module>
                    <method>load_page</method>
                </data>
                <data>
                    <category>body</category>
                    <model>label_edit</model>
                    <label>Nom :</label>
                    <id>EditorPageName</id>
                    <type>text</type>
                    <lower_on>1</lower_on>
                </data>
                <data>
                    <category>body</category>
                    <model>label_combobox</model>
                    <label>Type :</label>
                    <id>EditorPageTypeId</id>
                    <map>
                    	<data>
                    		<key>0</key>
                    		<value>Sélectionner un type...</value>
                    	</data>
                    	<data>
                    		<key>1</key>
                    		<value>Fichier</value>
                    	</data>
                    	<data>
                    		<key>2</key>
                    		<value>Répertoire</value>
                    	</data>
                    </map>
                </data>
                <data>
                    <category>body</category>
                    <model>label_radiobutton</model>
                    <label>Par défaut :</label>
                    <id>EditorPageDefault</id>
                    <default>0</default>
                    <map>
                    	<data>
                    		<id>EditorPageDefaultYes</id>
                    		<value>1</value>
                    		<label>Oui</label>
                    	</data>
                    	<data>
                    		<id>EditorPageDefaultNo</id>
                    		<value>0</value>
                    		<label>Non</label>
                    	</data>
                    </map>
                </data>
                <!-- button -->
                <data>
                    <category>button</category>
                    <id>EditorPageSave</id>
                    <module>page</module>
                    <method>save_page</method>
                    <picto>save</picto>
                    <text>Enregistrer</text>
                </data>
                <data>
                    <category>button</category>
                    <id>EditorPageSearch</id>
                    <module>page</module>
                    <method>search_page</method>
                    <picto>search</picto>
                    <text>Rechercher</text>
                </data>
                <data>
                    <category>button</category>
                    <id>EditorPageDelete</id>
                    <module>page</module>
                    <method>delete_page</method>
                    <picto>trash</picto>
                    <text>Supprimer</text>
                </data>
                <data>
                    <category>button</category>
                    <id>EditorPageNew</id>
                    <module>page</module>
                    <method>new_page</method>
                    <picto>file</picto>
                    <text>Nouveau</text>
                </data>
                <!-- end -->
            </map>
        </data>
        <!-- ============================================ -->
        <!-- edition -->
        <!-- ============================================ -->
        <data>
            <code>edition</code>
            <title>Edition</title>
            <id>EditorTab2</id>
        </data>
        <!-- ============================================ -->
        <!-- edition_command -->
        <!-- ============================================ -->
        <data>
            <code>edition_command</code>
          	<id>EditorEditionContent</id>
            <map>
                <!-- Textes -->
                <data>
                    <category>text</category>
                    <label>Textes</label>
                    <map>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>selection</method>
                            <key>bold</key>
                            <label>Texte en gras</label>
                        </data>
                    </map>
                </data>
                <!-- Couleurs -->
                <data>
                    <category>text</category>
                    <label>Couleurs</label>
                    <map>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>selection</method>
                            <key>bold</key>
                            <label>Avant-plan</label>
                        </data>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>selection</method>
                            <key>bold</key>
                            <label>Arrière-plan</label>
                        </data>
                    </map>
                </data>
                <!-- Styles personnalisés -->
                <data>
                    <category>text</category>
                    <module>edition_command</module>
                    <method>selection</method>
                    <label>Styles personnalisés</label>
                    <map>
                        <!-- Titres -->
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>selection</method>
                            <label>Titres</label>
                            <map>
                                <data>
                                    <category>text</category>
                                    <module>edition_command</module>
                                    <method>selection</method>
                                    <label>Titre 1</label>
                                </data>
                                <data>
                                    <category>text</category>
                                    <module>edition_command</module>
                                    <method>selection</method>
                                    <label>Titre 2</label>
                                </data>
                                <data>
                                    <category>text</category>
                                    <module>edition_command</module>
                                    <method>selection</method>
                                    <label>Titre 3</label>
                                </data>
                            </map>
                        </data>
                        <!-- Parallax -->
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>selection</method>
                            <label>Parallax</label>
                            <map>
                                <data>
                                    <category>text</category>
                                    <module>edition_command</module>
                                    <method>parallax</method>
                                    <label>Parallax</label>
                                </data>
                            </map>
                        </data>
                    </map>
                </data>
                <!-- Actions -->
                <data>
                    <category>text</category>
                    <label>Actions</label>
                    <map>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>store_page_file</method>
                            <label>Sauvegarder</label>
                        </data>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>load_page_file</method>
                            <label>Charger</label>
                        </data>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>new_page</method>
                            <label>Nouveau</label>
                        </data>
                        <data>
                            <category>text</category>
                            <module>edition_command</module>
                            <method>show_html</method>
                            <label>Afficher HTML</label>
                        </data>
                    </map>
                </data>
                <!-- end -->
            </map>
        </data>
        <!-- ============================================ -->
        <!-- end -->
        <!-- ============================================ -->
    </datas>
</rdv>
