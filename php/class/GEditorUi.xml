        <!-- ============================================ -->
        <!-- home -->
        <!-- ============================================ -->
        <data>
            <code>home</code>
            <title>ReadyEditor</title>
            <id>EditorTab0</id>
            <intro><![CDATA[
                <b>ReadyEditor</b> est un éditeur de pages HTML.<br>
                Il permet d'éditer les pages HTML du siteweb.
                Cela accélère l'ajout de nouveaux contenus
                et évite de passer du temps inutilement à écrire du code
                dans le but d'ajouter de nouveaux contenus.
                <br>Produit par <b>Gérard KESSE</b>.
               ]]></intro>
        </data>
        <!-- ============================================ -->
        <!-- page -->
        <!-- ============================================ -->
        <data>
            <code>page</code>
            <title>Page</title>
            <id>EditorTab1</id>                
            <map>
                <!-- body : hidden -->
                <data>
                    <category>body</category>
                    <model>hidden</model>
                    <label>Id :</label>
                    <id>EditorPageId</id>
                    <type>number</type>
                </data>
                <data>
                    <category>body</category>
                    <model>hidden</model>
                    <label>Id parent :</label>
                    <id>EditorPageParentId</id>
                    <type>number</type>
                </data>
                <data>
                    <category>body</category>
                    <model>hidden</model>
                    <label>Path :</label>
                    <id>EditorPagePath</id>
                    <type>text</type>
                </data>
                <data>
                    <category>body</category>
                    <model>hidden</model>
                    <label>Id Path :</label>
                    <id>EditorPageIdPath</id>
                    <type>text</type>
                </data>
                <data>
                    <category>body</category>
                    <model>hidden_div</model>
                    <label>Id Path :</label>
                    <id>EditorPageDefaultAddress</id>
                    <type>text</type>
                </data>
                <data>
                    <category>body</category>
                    <model>hidden_div</model>
                    <label>Id Path :</label>
                    <id>EditorPageDefaultPage</id>
                    <type>text</type>
                </data>
                <!-- body : visible-->
                <data>
                    <category>body</category>
                    <model>addressbar</model>
                    <id>EditorPageAddress</id>
                    <module>page</module>
                    <method>load_page</method>
                </data>
                <data>
                    <category>body</category>
                    <model>label_edit</model>
                    <label>Nom :</label>
                    <id>EditorPageName</id>
                    <type>text</type>
                    <lower_on>1</lower_on>
                </data>
                <data>
                    <category>body</category>
                    <model>label_combobox</model>
                    <label>Type :</label>
                    <id>EditorPageTypeId</id>
                    <module>page</module>
                    <method>select_page_type</method>
                    <map>
                    	<data>
                    		<key>0</key>
                    		<value>Sélectionner un type...</value>
                    	</data>
                    	<data>
                    		<key>1</key>
                    		<value>Fichier</value>
                    	</data>
                    	<data>
                    		<key>2</key>
                    		<value>Répertoire</value>
                    	</data>
                    </map>
                </data>
                <data>
                    <category>body</category>
                    <model>label_radiobutton</model>
                    <label>Par défaut :</label>
                    <id>EditorPageDefault</id>
                    <default>0</default>
                    <map>
                    	<data>
                    		<id>EditorPageDefaultYes</id>
                    		<value>1</value>
                    		<label>Oui</label>
                    	</data>
                    	<data>
                    		<id>EditorPageDefaultNo</id>
                    		<value>0</value>
                    		<label>Non</label>
                    	</data>
                    </map>
                </data>
                <!-- button -->
                <data>
                    <category>button</category>
                    <id>EditorPageSave</id>
                    <module>page</module>
                    <method>save_page</method>
                    <picto>save</picto>
                    <text>Enregistrer</text>
                </data>
                <data>
                    <category>button</category>
                    <id>EditorPageSearch</id>
                    <module>page</module>
                    <method>search_page</method>
                    <picto>search</picto>
                    <text>Rechercher</text>
                </data>
                <data>
                    <category>button</category>
                    <id>EditorPageDelete</id>
                    <module>page</module>
                    <method>delete_page</method>
                    <picto>trash</picto>
                    <text>Supprimer</text>
                </data>
                <data>
                    <category>button</category>
                    <id>EditorPageNew</id>
                    <module>page</module>
                    <method>new_page</method>
                    <picto>file</picto>
                    <text>Nouveau</text>
                </data>
