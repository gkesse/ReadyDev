<rdv>
    <datas>
        <!-- ============================================ -->
        <!-- editor -->
        <!-- ============================================ -->
        <data>
            <code>editor</code>
            <title>Éditeur de pages HTML</title>
            <id>editeur_pages_html</id>
            <map>
                <!-- ============================================ -->
                <!-- env -->
                <!-- ============================================ -->
                <data>
                    <category>env</category>
                    <model>data</model>
                    <id>EditorPageAddressParent</id>
                </data>
                <!-- ============================================ -->
                <!-- header -->
                <!-- ============================================ -->
                <data>
                    <category>header</category>
                    <tooltip>Accueil</tooltip>
                    <id>EditorTab0</id>
                    <name><![CDATA[<i class='fa fa-home'></i>]]></name>
                </data>
                <data>
                    <category>header</category>
                    <tooltip>Gestion d'une page</tooltip>
                    <id>EditorTab1</id>
                    <name>Page</name>
                </data>
                <data>
                    <category>header</category>
                    <tooltip>Edition d'une page</tooltip>
                    <id>EditorTab2</id>
                    <name>Edition</name>
                </data>
                <!-- ============================================ -->
                <!-- header/link -->
                <!-- ============================================ -->
                <data>
                    <category>header/link</category>
                    <module>editor</module>
                    <method>open_header</method>
                </data>
                <!-- ============================================ -->
                <!-- home -->
                <!-- ============================================ -->
                <data>
                    <category>home</category>
                    <title>ReadyEditor</title>
                    <id>EditorTab0</id>
                    <intro><![CDATA[
                        <b>ReadyEditor</b> est un éditeur de pages HTML.<br>
                        Il permet d'éditer les pages HTML du siteweb.
                        Cela accélère l'ajout de nouveaux contenus
                        et évite de passer du temps inutilement à écrire du code
                        dans le but d'ajouter de nouveaux contenus.
                        <br>Produit par <b>Gérard KESSE</b>.
                       ]]></intro>
                </data>
                <!-- ============================================ -->
                <!-- page -->
                <!-- ============================================ -->
                <data>
                    <category>page</category>
                    <title>Page</title>
                    <id>EditorTab1</id>
                </data>
                <!-- ============================================ -->
                <!-- page/body -->
                <!-- ============================================ -->
                <data>
                    <category>page/body</category>
                    <model>hidden</model>
                    <label>Id :</label>
                    <id>EditorPageId</id>
                    <type>number</type>
                </data>
                <data>
                    <category>page/body</category>
                    <model>hidden</model>
                    <label>Id parent :</label>
                    <id>EditorPageParentId</id>
                    <type>number</type>
                </data>
                <data>
                    <category>page/body</category>
                    <model>addressbar</model>
                    <id>EditorPageAddress</id>
                    <module>page</module>
                    <method>load_page</method>
                </data>
                <data>
                    <category>page/body</category>
                    <model>label/edit</model>
                    <label>Nom :</label>
                    <id>EditorPageName</id>
                    <type>text</type>
                    <lower_on>1</lower_on>
                </data>
                <data>
                    <category>page/body</category>
                    <model>combobox</model>
                    <label>Type :</label>
                    <id>EditorPageTypeId</id>
                </data>
                <!-- ============================================ -->
                <!-- page/button -->
                <!-- ============================================ -->
                <data>
                    <category>page/button</category>
                    <id>EditorPageSave</id>
                    <module>page</module>
                    <method>save_page</method>
                    <picto>save</picto>
                    <text>Enregistrer</text>
                </data>
                <data>
                    <category>page/button</category>
                    <id>EditorPageSearch</id>
                    <module>page</module>
                    <method>search_page</method>
                    <picto>search</picto>
                    <text>Rechercher</text>
                </data>
                <data>
                    <category>page/button</category>
                    <id>EditorPageDelete</id>
                    <module>page</module>
                    <method>delete_page</method>
                    <picto>trash</picto>
                    <text>Supprimer</text>
                </data>
                <data>
                    <category>page/button</category>
                    <id>EditorPageNew</id>
                    <module>page</module>
                    <method>new_page</method>
                    <picto>file</picto>
                    <text>Nouveau</text>
                </data>
                <!-- ============================================ -->
                <!-- edition -->
                <!-- ============================================ -->
                <data>
                    <category>edition</category>
                    <title>Edition</title>
                    <id>EditorTab2</id>
                </data>
                <!-- ============================================ -->
                <!-- end -->
                <!-- ============================================ -->
            </map>
        </data>
